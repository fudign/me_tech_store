{
    "version": 2,
    "builds": [
        {
            "src": "api/index.php",
            "use": "vercel-php@0.7.1"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(css|js|images|fonts|storage)/(.+)",
            "dest": "public/$1/$2"
        },
        {
            "src": "/build/(.+)",
            "dest": "public/build/$1"
        },
        {
            "src": "/(.*)",
            "dest": "api/index.php"
        }
    ]
}
